{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "base",
      "request": "launch",
      "type": "dart",
      "args": [
        // Flutter Inspector 디버그 설명 비활성화
        "--dart-define=flutter.inspector.debugDescription=false",
        // 앱 내의 성능 문제를 확인하는 Jank 기록 비활성화
        "--dart-define=flutter.jank=none"
      ]
    },
    {
      "name": "base (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "base (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}
